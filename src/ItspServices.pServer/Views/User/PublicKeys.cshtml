@using System.Text
@model ItspServices.pServer.Abstraction.Models.User
<div class="key-edit-popup">
    <div class="popup-content">
        <div class="input-group">
            <label for="new-key-input">New Key</label>
            <input type="text" class="form-control" id="new-key"/>
                <button class="btn btn-success" id="submit-new-key-button">Add</button>
        </div>
    </div>
</div>
<div class="row">
    <!--<nav class="col-md-1 navbar-expand d-none d-md-block navbar-light bg-white border-right box-shadow sidebar">
        <div class="sidebar-sticky">
            <ul class="nav flex-column">
