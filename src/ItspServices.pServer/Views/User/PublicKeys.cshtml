    <div class="col user-view-body">
        <h1>
            Public Keys:
            <button class="add-key-btn float-right" onclick="openPublicKeyPopup()">Add Key</button>
        </h1>
        <br />
        <div class="popup">
        </div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Key</th>
                    <th scope="col">Status</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.PublicKeys.Count; i++)
                {
                <tr>
                    <td>@i</td>
                    <td>@Encoding.UTF8.GetString(Model.PublicKeys[i].KeyData)</td>
                    <td>@Model.PublicKeys[i].Flag</td>
                    <td>
                        <asp:button class="btn btn-outline-warning">
                            Make obsolet
                        </asp:button>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>